<div class="container">
	<h1 class="title section is-2 has-text-info section-title has-text-centered">
		Proximos eventos
	</h1>
	{% if eventos|length > 0 %}
		{% for evento in eventos %}
			<div class="columns section">
				<div class="column is-6">
					<figure class="image is-16by9 queHacemos-img">
						<img src="{{ base_url() }}/public/uploads/{{ asset(evento.imagen) }}" class="zoom">
					</figure>
				</div>
				<div class="column is-6 center">
					<h2 class="title is-3 has-text-info last-section has-text-centered">
						{{ evento.titulo }}
					</h2>
					<p class="has-text-centered has-text-link has-text-weight-bold is-size-5">
						{{ evento.texto }}
					</p>
				</div>
			</div>
		{% endfor %}
	{% else %}
		<p class="has-text-centered has-text-link has-text-weight-bold is-size-5 is-fullwidth">
			No hay eventos
		</p>
	{% endif %}
</div>
