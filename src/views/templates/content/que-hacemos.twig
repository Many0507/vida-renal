<div class="container">
     <h1 class="title section is-2 has-text-info section-title has-text-centered">¿Qué hacemos?</h1>
     <section class="section">
          <div class="columns">
               <div class="column is-6">
                    <figure class="image is-16by9 queHacemos-img">
                         <img src="{{ base_url() }}{{ asset('/public/icons/img.jpg') }}" class="image queHacemos-image">
                    </figure>
                    <p class="has-text-link has-text-weight-bold is-size-5 has-text-centered slider__text">
                         Atencion Medica
                    </p>
               </div>
               <div class="column is-6">
                    <figure class="image is-16by9 queHacemos-img">
                         <img src="{{ base_url() }}{{ asset('/public/icons/img.jpg') }}">
                    </figure>
                    <p class="has-text-link has-text-weight-bold is-size-5 has-text-centered slider__text">
                         Atencion Psicologica
                    </p>
               </div>
          </div>
          <div class="columns">
               <div class="column is-6">
                    <figure class="image is-16by9 queHacemos-img">
                         <img src="{{ base_url() }}{{ asset('/public/icons/img.jpg') }}">
                    </figure>
                    <p class="has-text-link has-text-weight-bold is-size-5 has-text-centered slider__text">
                         Atencion Nutricional
                    </p>
               </div>
               <div class="column is-6">
                    <figure class="image is-16by9 queHacemos-img">
                         <img src="{{ base_url() }}{{ asset('/public/icons/img.jpg') }}">
                    </figure>
                    <p class="has-text-link has-text-weight-bold is-size-5 has-text-centered slider__text">
                         Laboratorios - Estudios
                    </p>
               </div>
          </div>
          <div class="columns">
               <div class="column is-6">
                    <figure class="image is-16by9 queHacemos-img">
                         <img src="{{ base_url() }}{{ asset('/public/icons/img.jpg') }}">
                    </figure>
                    <p class="has-text-link has-text-weight-bold is-size-5 has-text-centered slider__text">
                         Platicas Informativas
                    </p>
               </div>
               <div class="column is-6">
                    <figure class="image is-16by9 queHacemos-img">
                         <img src="{{ base_url() }}{{ asset('/public/icons/img.jpg') }}">
                    </figure>
                    <p class="has-text-link has-text-weight-bold is-size-5 has-text-centered slider__text">
                         Apoyo con Medicamentos
                    </p>
               </div>
          </div>
     </section>
     <section class="section slider__section">
          <h2 class="title section-title-topbar is-3 has-text-info last-section has-text-centered">
               Talleres
          </h2>
          <div class="swiper-container" id="swiper">
               <div class="swiper-wrapper">
                    {% if talleres|length > 0 %}
                         {% for taller in talleres %}
                              <div class="swiper-slide is-flex slider__content" style="cursor: pointer;">
                                   {# <a href="/talleres"> #}
                                        <img
                                             src="{{ base_url() }}{{ asset(taller.imagen) }}"
                                             alt="imagen de Taller"
                                             class="image slider__img"
                                        />
                                   {# </a> #}
                                   <p class="has-text-link has-text-weight-semibold slider__text">
                                        {{ taller.titulo }}
                                   </p>
                              </div>
                         {% endfor %}
                    {% else %}
                         <p class="has-text-centered has-text-link has-text-weight-bold is-size-5 is-fullwidth">
                              No hay talleres
                         </p>
                    {% endif %}
               </div>
          </div>
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
     </section>
</div>
